# Server Configuration
PORT=4000
# Comma-separated list of allowed frontend origins, or "*" for all (dev only)
FRONTEND_ORIGIN=http://localhost:9002,http://localhost:3000

# Database (REQUIRED)
# Get from: https://www.mongodb.com/cloud/atlas/register
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=

# Weather API (REQUIRED)
# Get from: https://home.openweathermap.org/api_keys
# Free tier: 1000 calls/day
OPENWEATHER_API_KEY=

# Air Quality API (REQUIRED)
# Get from: https://www.iqair.com/air-pollution-data-api
# Free tier: 10,000 calls/month
AIRVISUAL_API_KEY=

# Plant Identification API (REQUIRED)
# Get from: https://my.plantnet.org/
# Free tier: 500 identifications/day
PLANTNET_API_KEY=

# IP Geolocation API (REQUIRED)
# Get from: https://ipinfo.io/signup
# Free tier: 50,000 requests/month
IPINFO_TOKEN=

# NASA Soil Moisture API (OPTIONAL)
# Get from: https://api.nasa.gov/
NASA_API_KEY=
