# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/greenguardian
DATABASE_NAME=greenguardian

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Security
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
FIREBASE_BUCKET=your-firebase-bucket-name.appspot.com

# API Keys
WEATHER_API_KEY="your api key"
AIR_QUALITY_API_KEY="your api key"
PLANT_RECOGNITION_API_KEY="your api key"

# API URLs
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
AIR_QUALITY_API_URL=https://api.airvisual.com/v2
PLANT_RECOGNITION_API_URL=https://api.plant.id/v2

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window
